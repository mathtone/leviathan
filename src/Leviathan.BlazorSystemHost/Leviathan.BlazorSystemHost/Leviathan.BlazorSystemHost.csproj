<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<Version>1.3</Version>
		<Authors>Megabit</Authors>
		<Company>Megabit</Company>
		<Description>
			This is a Blazorise Template for a Blazor Server Application.
			Blazorise is a component library built on top of Blazor and CSS frameworks like Bootstrap, Tailwind, Bulma and Material.
		</Description>
		<Copyright>Copyright 2018-2023 Megabit</Copyright>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Scripts\CookieManager.ts" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Blazorise" Version="1.3.*" />
		<PackageReference Include="Blazorise.Bootstrap5" Version="1.3.*" />
		<PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.3.*" />
		<PackageReference Include="Blazorise.DataGrid" Version="1.3.*" />
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.2.2">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\Leviathan.Services\Leviathan.Services.csproj" />
	  <ProjectReference Include="..\..\Leviathan.SystemHost.Support\Leviathan.SystemHost.Support.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <TypeScriptCompile Include="Scripts\CookieManager.ts" />
	</ItemGroup>

</Project>
