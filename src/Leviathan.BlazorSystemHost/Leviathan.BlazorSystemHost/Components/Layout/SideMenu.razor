	<BarBrand>
		<BarItem>
			<BarLink To="">
				<BarIcon IconName="customIcon" />
				Leviathan
			</BarLink>
		</BarItem>
	</BarBrand>
	<BarMenu>
		<BarStart>
			<BarItem>
				<BarLink To="/">
					<BarIcon IconName="IconName.Dashboard" />
					Dashboard
				</BarLink>
				<BarLink To="/users">
					<BarIcon IconName="IconName.Users" />
					Users
				</BarLink>
				<BarLink To="/modules">
					<BarIcon IconName="IconName.City" />
					Modules
				</BarLink>
				<BarLink To="/instances">
					<BarIcon IconName="IconName.Lightbulb" />
					Instances
				</BarLink>
			</BarItem>
		</BarStart>
	</BarMenu>
