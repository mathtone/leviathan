<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>d2860ae4-59e0-4948-9d59-eb6a41823162</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Typescript\CookieManager.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\leviathan_private_key.pem" Link="leviathan_private_key.pem">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.2.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.19.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Leviathan.Authentication.BlazorUi\Leviathan.Authentication.BlazorUi.csproj" />
    <ProjectReference Include="..\Leviathan.Authentication\Leviathan.Authentication.csproj" />
    <ProjectReference Include="..\Leviathan.Crypto\Leviathan.Crypto.csproj" />
    <ProjectReference Include="..\Leviathan.InstanceHost\Leviathan.InstanceHost.csproj" />
    <ProjectReference Include="..\Leviathan.Users.Npgsql\Leviathan.Users.Npgsql.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Typescript\CookieManager.ts" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\js\" />
  </ItemGroup>

</Project>
